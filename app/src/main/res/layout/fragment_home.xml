<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/backgroundBlack"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="50">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/right_balance_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1.250.000 so'm"
                android:textColor="#eceff1"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="@+id/olchov"
                app:layout_constraintEnd_toEndOf="@+id/olchov"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/olchov"
                app:layout_constraintVertical_bias="0.9" />

            <TextView
                android:id="@+id/right_line1_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="28-Feb"
                android:textColor="#eceff1"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@+id/olchov"
                app:layout_constraintHorizontal_bias="0.076"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/right_balance_text_view" />

            <TextView
                android:id="@+id/right_line2_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chiqim"
                android:textColor="#eceff1"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@+id/olchov"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/right_line1_textview" />

            <TextView
                android:id="@+id/left_balance_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1.000.000 so'm"
                android:textColor="#eceff1"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="@+id/olchov"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="@+id/olchov"
                app:layout_constraintTop_toTopOf="@+id/olchov"
                app:layout_constraintVertical_bias="0.9" />

            <TextView
                android:id="@+id/left_line1_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="01-Feb"
                android:textColor="#eceff1"
                android:textSize="10dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.076"
                app:layout_constraintStart_toStartOf="@+id/left_balance_text_view"
                app:layout_constraintTop_toBottomOf="@+id/left_balance_text_view" />

            <TextView
                android:id="@+id/left_line2_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kirim"
                android:textColor="#eceff1"
                android:textSize="10dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/left_balance_text_view"
                app:layout_constraintTop_toBottomOf="@+id/left_line1_textview" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="108dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Balans:"
                android:textColor="#eceff1"
                android:textSize="18dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@+id/total_balance_textview"
                app:layout_constraintEnd_toStartOf="@+id/olchov"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toEndOf="@+id/olchov" />

            <TextView
                android:id="@+id/total_balance_textview"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100.000 so'm"
                android:textColor="#eceff1"
                android:textSize="32dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/olchov"
                app:layout_constraintEnd_toStartOf="@+id/olchov"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/olchov"
                app:layout_constraintTop_toBottomOf="@+id/olchov" />

            <TextView
                android:id="@+id/left_balance_textview"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1000 USD left"
                android:textColor="#eceff1"
                android:textSize="10dp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/olchov"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toEndOf="@+id/olchov"
                app:layout_constraintTop_toBottomOf="@+id/total_balance_textview" />

            <com.aid.moneymanager.lib.OlchovLibFromGit
                android:id="@+id/olchov"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:gaugeEndValue="100"
                app:gaugePointEndColor="@color/gauge_income"
                app:gaugePointStartColor="@color/gauge_income"
                app:gaugeStartAngle="135"
                app:gaugeStartValue="0"
                app:gaugeStrokeCap="BUTT"
                app:gaugeStrokeColor="@color/gauge_expense"
                app:gaugeStrokeWidth="12dp"
                app:gaugeSweepAngle="270"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

            </com.aid.moneymanager.lib.OlchovLibFromGit>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_weight="50"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dedede"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:text="Harajatlar:"
                android:textColor="@color/secondary_text_material_light"
                android:textSize="16sp" />


        </RelativeLayout>

        <ListView
            android:id="@+id/favourite_categories_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:clipToPadding="false"
            android:paddingBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>